@{
    Layout = "~/Views/Shared/Shared.cshtml";
}

@{
    var upload = ViewData["Upload"] as List<Infra.Data.Entities.Upload>;
 }

<h2 class="d-flex justify-content-center m-4">Listagem de arquivos</h2>
<button type="button" class="btn btn-primary mb-1 create" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><i class="fas fa-plus me-1"></i>Cadastrar</button>

<div>
    <strong>@TempData["Mensagem"]</strong>
</div>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th class="text-white">Titulo</th>
            <th class="text-white">Descricao</th>
            <th class="text-white">Arquivo</th>
            <th class="text-white">Nome Do Arquivo</th>
            <th class="text-white">Data da Criação</th>
            <th class="text-white"></th>
        </tr>
    </thead>
    <tbody>
        @if (@upload != null)
        {
            @foreach (var item in @upload)
            {
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.Descricao</td>
                    <td>@item.Arquivo</td>
                    <td>@item.Nome_Do_Arquivo</td>
                    <td>@item.DataCriacao</td>
                    <td>
                        <a href="/Cliente/Edicao" class="btn btn-primary btn-sm">
                            Atualizar
                        </a>
                        <a href="/Home/Excluir/@item.IdUpload" class="btn btn-danger btn-sm">
                            Excluir
                        </a>
                    </td>
                </tr>

            }
        }

    </tbody>
</table>
